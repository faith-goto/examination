<p id="notice"><%= notice %></p>

<h1>テストの種類</h1>

<table>
  <thead>
    <tr>
      <th>期間</th>
      <th>テスト名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @what_tests.each do |what_test| %>
      <tr>
        <td><%= what_test.period.periodname %></td>
        <td><%= what_test.testname %></td>
        <td><%= link_to '詳細', what_test %></td>
        <td><%= link_to '編集', edit_what_test_path(what_test) %></td>
        <td><%= link_to '削除', what_test, method: :delete, data: { confirm: '削除してもよろしいですか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

