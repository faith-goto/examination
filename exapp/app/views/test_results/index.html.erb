<p id="notice"><%= notice %></p>

<h1>全テストデータ</h1>

<table>
  <thead>
    <tr>
      <th>生徒名</th>
      <th>学年</th>
      <th>期間</th>
      <th>テスト名</th>
      <th>国語</th>
      <th>数学</th>
      <th>英語</th>
      <th>理科</th>
      <th>社会</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_results.each do |test_result| %>
      <tr>
        <td><%= test_result.user.name %></td>
        <td><%= test_result.user.grade %></td>
        <td><%= test_result.what_test.period.periodname %></td>
        <td><%= test_result.what_test.testname %></td>
        <td><%= test_result.jpn %></td>
        <td><%= test_result.math %></td>
        <td><%= test_result.eng %></td>
        <td><%= test_result.sci %></td>
        <td><%= test_result.soc %></td>
        <td><%= link_to '詳細', test_result %></td>
        <td><%= link_to '編集', edit_test_result_path(test_result) %></td>
        <td><%= link_to '削除', test_result, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

